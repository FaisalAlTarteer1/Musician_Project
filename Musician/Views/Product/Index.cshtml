@model IEnumerable<Musician.Models.Product>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-5 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                Create New  Product
            </a>
        </div>
    </div>
    <br /> 
    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                       <h5> Product Name</h5>
                    </th>
                    <th>
                       <h5> Price </h5>
                    </th>
                    <th>
                      <h5>  Category</h5>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="20%">@obj.Price</td>
                        <td width="20%">@obj.Category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {<p>No Product Exist</p>}

</div>

